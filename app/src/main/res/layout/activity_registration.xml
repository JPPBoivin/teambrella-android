<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_confetti_color"
            tools:ignore="ContentDescription" />

        <com.teambrella.android.ui.widget.CircleView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="@+id/input_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/team_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="56dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/car" />


        <com.teambrella.android.ui.widget.AkkuratRegularTextView
            android:id="@+id/team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/team_icon"
            android:textColor="@android:color/white"
            android:textSize="20sp" />


        <com.teambrella.android.ui.widget.AkkuratRegularTextView
            android:id="@+id/team_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/team_name"
            android:textColor="@android:color/white"
            android:textSize="14sp" />


        <LinearLayout
            android:id="@+id/input_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/section_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/team_country"
            app:layout_constraintVertical_bias="0.0"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:padding="36dp">

            <com.teambrella.android.ui.widget.AkkuratBoldTextView
                android:id="@+id/header"
                style="@style/Teambrella.Teammate.Section.TextAppearence.Header"
                android:text="@string/registration" />

            <com.teambrella.android.ui.widget.AkkuratBoldTextView
                android:id="@+id/model_title"
                style="@style/Teambrella.TextAppearance.InputTitle"
                android:layout_marginTop="16dp"
                android:text="@string/model" />

            <android.support.v7.widget.AppCompatAutoCompleteTextView
                android:id="@+id/model_value"
                style="@style/Teambrella.TextAppearance.Input"
                android:maxLines="1"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:scrollHorizontally="true"
                android:layout_marginTop="8dp" />

            <com.teambrella.android.ui.widget.AkkuratBoldTextView
                android:id="@+id/location_title"
                style="@style/Teambrella.TextAppearance.InputTitle"
                android:layout_marginTop="16dp"
                android:text="@string/location_title" />

            <android.support.v7.widget.AppCompatAutoCompleteTextView
                android:id="@+id/location_value"
                style="@style/Teambrella.TextAppearance.Input"
                android:maxLines="1"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:nextFocusForward="@+id/next"
                android:scrollHorizontally="true"
                android:layout_marginTop="8dp" />

            <com.teambrella.android.ui.widget.AkkuratBoldTextView
                android:id="@+id/name_title"
                style="@style/Teambrella.TextAppearance.InputTitle"
                android:layout_marginTop="16dp"
                android:text="@string/my_name_is_title" />


            <com.teambrella.android.ui.widget.AkkuratRegularEditText
                android:id="@+id/name_value"
                style="@style/Teambrella.TextAppearance.Input"
                android:maxLines="1"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:scrollHorizontally="true"
                android:layout_marginTop="8dp" />

            <com.teambrella.android.ui.widget.AkkuratBoldTextView
                android:id="@+id/email_title"
                style="@style/Teambrella.TextAppearance.InputTitle"
                android:layout_marginTop="16dp"
                android:text="@string/email" />


            <com.teambrella.android.ui.widget.AkkuratRegularEditText
                android:id="@+id/email_value"
                style="@style/Teambrella.TextAppearance.Input"
                android:maxLines="1"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:scrollHorizontally="true"
                android:layout_marginTop="8dp" />


            <com.teambrella.android.ui.widget.AkkuratBoldTextView
                android:id="@+id/agree"
                style="@style/Teambrella.TextAppearance.SectionButton"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:layout_marginTop="36dp"
                android:layout_gravity="end"
                android:background="@drawable/header_button"
                android:text="@string/agree"
                android:focusable="true"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>


</ScrollView>