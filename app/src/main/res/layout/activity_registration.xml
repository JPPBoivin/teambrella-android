<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_confetti_color" />

    <com.teambrella.android.ui.widget.CircleView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="@+id/input_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <LinearLayout
        android:id="@+id/input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/section_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="36dp">


        <com.teambrella.android.ui.widget.AkkuratBoldTextView
            android:id="@+id/header"
            style="@style/Teambrella.Teammate.Section.TextAppearence.Header"
            android:text="@string/personal_info" />

        <com.teambrella.android.ui.widget.AkkuratBoldTextView
            android:id="@+id/my_name_is_title"
            style="@style/Teambrella.TextAppearance.InputTitle"
            android:layout_marginTop="16dp"
            android:text="@string/my_name_is_title" />


        <com.teambrella.android.ui.widget.AkkuratRegularEditText
            android:id="@+id/my_name_is_value"
            style="@style/Teambrella.TextAppearance.Input"
            android:layout_marginTop="8dp"/>

        <com.teambrella.android.ui.widget.AkkuratBoldTextView
            android:id="@+id/birthday_title"
            style="@style/Teambrella.TextAppearance.InputTitle"
            android:layout_marginTop="16dp"
            android:text="@string/birthday_title" />

        <com.teambrella.android.ui.widget.AkkuratRegularEditText
            android:id="@+id/birthday_value"
            style="@style/Teambrella.TextAppearance.Input"
            android:layout_marginTop="8dp"/>

        <com.teambrella.android.ui.widget.AkkuratBoldTextView
            android:id="@+id/gender_title"
            style="@style/Teambrella.TextAppearance.InputTitle"
            android:layout_marginTop="16dp"
            android:text="@string/gender_title" />

        <com.teambrella.android.ui.widget.AkkuratRegularEditText
            android:id="@+id/gender_value"
            style="@style/Teambrella.TextAppearance.Input"
            android:layout_marginTop="8dp"/>

        <com.teambrella.android.ui.widget.AkkuratBoldTextView
            android:id="@+id/location_title"
            style="@style/Teambrella.TextAppearance.InputTitle"
            android:layout_marginTop="16dp"
            android:text="@string/location_title" />

        <com.teambrella.android.ui.widget.AkkuratRegularEditText
            android:id="@+id/location_value"
            style="@style/Teambrella.TextAppearance.Input"
            android:layout_marginTop="8dp"/>

        <com.teambrella.android.ui.widget.AkkuratBoldTextView
            android:id="@+id/next"
            style="@style/Teambrella.TextAppearance.SectionButton"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginTop="24dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:layout_gravity="end"
            android:background="@drawable/header_button"
            android:text="@string/next"
            android:textColor="@android:color/white" />

    </LinearLayout>




</android.support.constraint.ConstraintLayout>