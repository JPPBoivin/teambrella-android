<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:background="@drawable/ic_confetti_color"
    android:layout_height="match_parent">


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/team_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:srcCompat="@drawable/car" />


    <com.teambrella.android.ui.widget.AkkuratRegularTextView
        android:id="@+id/team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:textSize="20sp" />


    <com.teambrella.android.ui.widget.AkkuratRegularTextView
        android:id="@+id/team_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="@android:color/white"
        android:textSize="14sp" />


    <LinearLayout
        android:id="@+id/input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/section_background"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:padding="36dp">


        <com.teambrella.android.ui.widget.AkkuratBoldTextView
            android:id="@+id/welcome_to_join_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:text="@string/welcome_to_join_title" />


        <com.teambrella.android.ui.widget.AkkuratRegularTextView
            android:id="@+id/welcome_to_join_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/battleshipGrey"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="14sp"
            android:lineSpacingMultiplier="1.4"
            android:text="@string/welcome_to_join_description" />

        <com.teambrella.android.ui.widget.AkkuratBoldTextView
            android:layout_marginTop="16dp"
            android:id="@+id/facebook_login"
            style="@style/Teambrella.TextAppearance.SectionButton"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/header_button"
            android:text="@string/continue_with_facebook"
            android:textColor="@android:color/white" />


        <com.teambrella.android.ui.widget.AkkuratBoldTextView
            android:id="@+id/vk_login"
            style="@style/Teambrella.TextAppearance.SectionButton"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="42dp"
            android:background="@drawable/header_button"
            android:text="@string/continue_with_vk"
            android:textColor="@android:color/white" />


    </LinearLayout>


</LinearLayout>