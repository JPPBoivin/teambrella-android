<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contacts_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selectable_item_foreground_4dp"
    android:padding="20dp">

    <com.teambrella.android.ui.widget.AkkuratBoldTextView
        android:id="@+id/header"
        style="@style/Teambrella.Teammate.Section.TextAppearence.Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contacts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/social_logo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/header"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:srcCompat="@drawable/facebook" />

    <com.teambrella.android.ui.widget.AkkuratBoldTextView
        android:id="@+id/social_title"
        style="@style/Teambrella.Teammate.Section.TextAppearence.Info"
        android:layout_marginStart="20dp"
        android:includeFontPadding="false"
        android:text="@string/facebook"
        app:layout_constraintStart_toEndOf="@id/social_logo"
        app:layout_constraintTop_toTopOf="@id/social_logo" />

    <com.teambrella.android.ui.widget.AkkuratRegularTextView
        android:id="@+id/social_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/charcoalGrey"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/social_title"
        app:layout_constraintTop_toBottomOf="@id/social_title" />


</androidx.constraintlayout.widget.ConstraintLayout>