<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintWidth_max="@dimen/chat_bubble_max_width"
        app:layout_constrainedWidth="true"
        android:background="@drawable/chat_paid_claim_background">


        <com.teambrella.android.ui.widget.AkkuratRegularTextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingMultiplier="1.5"
            android:paddingTop="16dp"
            android:paddingBottom="24dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Чтобы начать, нужна сумма на твоём кошельке. Сумма обеспечит ответное покрытие от 41 участников."
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <com.teambrella.android.ui.widget.AkkuratBoldTextView
            android:id="@+id/fund_wallet"
            android:layout_height="56dp"
            android:layout_width="match_parent"
            android:text="@string/fund_wallet"
            android:background="@drawable/chat_paid_claim_action_background"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="15sp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>

